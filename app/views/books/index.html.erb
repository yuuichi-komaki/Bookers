<h1 class="books">Books</h1>

<table class="table">
  <thead clas"table_head"s=>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </thead>

  <tbody class="table_body">
    <% @books.each do |book| %>
 <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to 'Show', book_path(book) %></td>
  <td><%= link_to 'Edit', edit_book_path(book) %></td>
  <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
 </tr>
<% end %>

  </tbody>

</table>

